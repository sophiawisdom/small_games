{
  "name": "small_games",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "npm-watch": "^0.6.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "styled-components": "4.3.2"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js, jsx",
      "quiet": false
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-dev": "dotenv -e .env.development react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "npm-watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "dotenv-cli": "^2.0.1"
  }
}
